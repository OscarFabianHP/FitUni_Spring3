<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultadoImc">

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="245dp"
        android:layout_height="129dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="63dp"
        android:text="TextView"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewResultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewResultado"
        android:layout_width="413dp"
        android:layout_height="370dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonVolverCalcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewResultado"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonVolverCalcular"
        android:layout_width="129dp"
        android:layout_height="64dp"
        android:layout_marginBottom="46dp"
        android:text="Volver"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewResultado" />
</androidx.constraintlayout.widget.ConstraintLayout>